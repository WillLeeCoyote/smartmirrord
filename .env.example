# SmartMirror Daemon Configuration
# Copy this file to .env and customize as needed

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_CONSOLE=True
LOG_TO_FILE=True
LOG_FILE_PATH=/var/log/smartmirrord/smartmirrord.log

# UART Debug
UART_DEBUG=False

# GPIO Configuration
GPIO_CHIP_PATH=/dev/gpiochip0
GPIO_POWER_STATUS_PIN=23
GPIO_IR_INPUT_PIN=27

# Camera Configuration
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# Motion Detection
MOTION_WIDTH=320
MOTION_HEIGHT=240
MOTION_THRESHOLD=150
MOTION_COOLDOWN_SEC=6

# UART Configuration
UART_PORT=/dev/serial0
UART_BAUDRATE=115200

# Display Policy
DISPLAY_POLICY_TIMEOUT=15

# Flask Web Server
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
